extends layout

block content
    .index-wrapper
        .header
            img(src='/images/logo.svg', alt='Logo')
        .navbar
            .navbar-container-1
                span Menu
                .navbar-menu-container
                    a(href='/dashboard').menu-option
                        img(src='/images/icon-dashboard.svg', alt='Dashboard Icon')
                        span Dashboard
                    a(href='/profile').menu-option
                        img(src='/images/profile-icon.svg', alt='Profile Icon')
                        span Profile
                    a(href='/chatbot').menu-option
                        img(src='/images/icon-chatbot.svg', alt='Chatbot Icon')
                        span Chatbot
                    a(href='/settings').menu-option
                        img(src='/images/icon-settings.svg', alt='Settings Icon')
                        span Settings
                    a(href='/logout').menu-option
                        img(src='/images/icon-logout.svg', alt='Logout Icon')
                        span Logout
            .navbar-container-2.button-close-navbar
                .arrow-left
        .chatbot
            .chat-container
                span#chatGreeting Hi, what can I help you with?
                .messages-container
                    each message in messages
                        if message.user == "assistant"
                            .message-container-assistant
                                img(src='/images/icon-chatbot-2.svg', alt='Chatbot Icon')
                                .message-wrapper-assistant
                                    span= message.content
                        else if message.user == "user"
                            .message-container-user
                                .message-wrapper-user
                                    span= message.content
                                img(src='/images/icon-user.svg', alt='User Icon')
                form#chatForm(action="/").chatbox
                    textarea#message(placeholder="How can I help you today?" maxlength="1000")
                    .buttons-chat
                        .button-chat-filters
                            img(src='/images/icon-filter.svg', alt='Filter Icon')
                        button#sendButton(type="submit")
                            | &#x2191;
            .search-engine-container
                span OLA
                        
